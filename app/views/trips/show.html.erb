<p>
  <strong>Source:</strong>
  <%= @trip.source %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @trip.destination %>
</p>

<p>
  <strong>Date of dep:</strong>
  <%= @trip.date_of_dep %>
</p>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Passenger Name</th>
      <th>Passenger Age</th>
      <th>Passenger Gender</th>
      <th >Passenger Seat Details</th>

    </tr>
  </thead>

  <tbody>
    <% @trip.passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.age %></td>
        <td><%= passenger.gender %></td>
        <% passenger.tickets.each do |p|%>
         <td><%= p.seat_number %> <%= p.seat_class %></td>
         <td><%= p.pnr %></td>
         <td><%= link_to 'Delete Passenger', p, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
