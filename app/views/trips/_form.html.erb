  <% if trip.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% trip.errors.full_messages.each do |message| %>
          <div class = "alert alert-warning"><%= message %></div>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "container aero-detail">
<%= form_with(model: trip, local: true) do |form| %>
<h3 class = "text-center">Fill in Trip details</h3>
  <div class="form-group">
    <strong><%= form.label :source %></strong>
    <%= form.text_field(:source, class: 'form-control') %>
  </div>

  <div class="form-group">
    <strong><%= form.label :destination %></strong>
    <%= form.text_field(:destination, class: 'form-control') %>
  </div>

  <div class="form-group">
    <strong><%= form.label :date_of_departure %></strong>
    <%= form.date_field(:date_of_dep, class: 'form-control') %>
  </div>

  <div class="form-group">
    <strong><%= form.label :departure_time %></strong>
    <%= form.time_select(:time_of_dep, {:minute_step => 15, :ampm => true}, class: 'form-control') %>
  </div>

  <div class="form-group">
    <strong><%= form.label :arrival_time %></strong>
    <%= form.time_select(:time_of_arr, {:minute_step => 15, :ampm => true}, class: 'form-control') %>
  </div>
  <div class="form-group">
      <strong><%= form.label :aeroplane_id %></strong>
        <select name="trip[aeroplane_id]" class ='form-control'>
          <% Aeroplane.all.each do |aero| %>
              <option value="<%= aero.id %>"><%= aero.name %></option>
          <% end %>
        </select>
  </div>
  <div class="form-group">
    <strong><%= form.label :Fares %></strong>
    <table class="table">
						<thead>
						<tr>
							<th scope="col">Economy</th>
							<th scope="col">Business</th>
							<th scope="col">Premium Eco</th>
						</tr>
						</thead>
						<tbody>
						<tr>
							<td scope="row"><%= form.number_field(:e_fare, class: 'form-control') %></td>
							<td><%= form.number_field(:b_fare, class: 'form-control') %></td>
							<td><%= form.number_field(:f_fare, class: 'form-control') %></td>
						</tr>
						</tbody>
	</table>
  </div>

  <div class="form-group">
    <%= form.submit(class: 'btn btn-block btn-dark') %>
  </div>
<% end %>
</div>
