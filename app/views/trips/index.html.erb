<div class = 'backgrounds'>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th>Date of dep</th>
      <th>Time of arr</th>
      <th>Time of departure</th>
      <th>Business Class fare</th>
      <th>Economy class fare</th>
      <th>First class fare</th>
      <th>Aeroplane</th>
      <th colspan="3"><%= link_to '+', new_trip_path, class: 'btn btn-light' %></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.source %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.date_of_dep %></td>
        <td><%= trip.time_of_arr%></td>
        <td><%= trip.time_of_dep%></td>
        <td><%= trip.b_fare %></td>
        <td><%= trip.e_fare %></td>
        <td><%= trip.f_fare %></td>
        <td><%= trip.aeroplane.name %></td>
        <td><%= link_to 'Show', trip, class: 'btn btn-info' %></td>
        <td><%= link_to 'Update', edit_trip_path(trip), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>