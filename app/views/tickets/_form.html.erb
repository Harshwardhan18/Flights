<%= f.fields_for :passenger, Passenger.new do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>
  <%= form.hidden_field(:user_id, :value => current_user.id) %>
  <div class="field">
    <%= form.label :gender %>
    <%= form.text_field :gender %>
  </div>
 <% end %> 
 
